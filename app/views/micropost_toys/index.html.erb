<p id="notice"><%= notice %></p>

<h1>Listing Micropost Toys</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micropost_toys.each do |micropost_toy| %>
      <tr>
        <td><%= micropost_toy.content %></td>
        <td><%= micropost_toy.user_id %></td>
        <td><%= link_to 'Show', micropost_toy %></td>
        <td><%= link_to 'Edit', edit_micropost_toy_path(micropost_toy) %></td>
        <td><%= link_to 'Destroy', micropost_toy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

